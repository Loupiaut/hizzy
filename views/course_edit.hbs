<h2>Edit Course</h2>

{{#if msg}}
<p>{{msg}}</p>
{{/if}}
{{#if course}}
<form action="/course-edit" method="post" id="course-edit-form">
  <label for="name">Course name</label>
  <input type="text" name="name" id="video-name" value="{{course.course_name}}">

  <label for="course_difficulty">Difficulty</label>
  <select name="course_difficulty" id="course_difficulty" value="{{course.course_difficulty}}">
    <option value="Beginner">Beginner</option>
    <option value="Intermediate">Intermediate</option>
    <option value="Master">Master</option>
  </select>

  <label for="course_videos">Course videos</label>
  <input type="text" name="course_videos" id="course_videos" value="{{course.course_videos}}">

  <button>Submit</button>
</form>
{{/if}}