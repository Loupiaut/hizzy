{{#if user}}
<h1 class="welcome__msg">Welcome to Juloup app<span class="bold__grey">{{user.username}}</span></h1>
{{/if}}


{{#if user.profilePhoto}}
<img src="{{user.profilePhoto}}" class="profileImg" />
{{else}}
{{!-- <img src="https://media3.giphy.com/media/113PoJxEaRxKbm/giphy.gif?cid=3640f6095bff0b91325859656f15cb72" alt=""> --}}
<h2>No profile picture! <br> Please upload your photo</h2>
<form id="photoForm" action="/upload" method="post" enctype="multipart/form-data">
  <div class="photoBox"><input type="file" name="profilePhoto" class="photoInput" onchange="fileSelect(event)"><span
      class="fileName">Click here to select the profile picture</span></div>
  <button type="submit" class="saveBut">Save</button>
</form>
{{/if}}
{{#if message }}
<div class="error-message w50">{{message}}</div>
{{/if}}
<h1>{{user.username}}</h1>
<p class="userDescription">Profile description.</p>

{{#if notViewedVideos}}
<h4>Next videos</h4>
{{!-- Initial width : 640 ; height : 385 --}}
<div id="not-viewed-div">
  {{#each notViewedVideos}}
  <iframe class="youtube-player" type="text/html" width="332" height="200 " src="{{this.url}}"></iframe>
  <label for="add-viewed">Add to viewed list</label>
  <button class="add-viewed-btn" id="{{this._id}}">Add</button>
  {{!-- <input type="checkbox" name="add-viewed" id="{{this._id}}"> --}}
  {{/each}}
</div>
{{/if}}

{{#if viewedVideos}}
<h4>Viewed videos</h4>
<div id="viewed-div">
  {{#each viewedVideos}}
  <iframe class=" youtube-player" type="text/html" width="332" height="200" src="{{this.url}}"></iframe>
  <label for="remove-viewed">Remove from viewed list</label>
  <button class="remove-viewed-btn" id="{{this._id}}">Remove</button>
  {{!-- <input type="checkbox" name="remove-viewed" id="{{this._id}}"> --}}
  {{/each}}
</div>
{{/if}}