{{#if msg}}
<p>{{msg}}</p>
{{/if}}

<div class="big-container manage-products-wrapper">
  <h3 class="manage-products-title">Manage your videos catalog</h3>
  <table class="product-manage-table">
    <thead>
      <tr class="table-row">
        <th class="table-head">Video Name</th>
        <th class="table-head">Video Url</th>
        <th class="table-head">Video Difficulty</th>
        <th class="table-head">Video Description</th>
        <th class="table-head">Video Front end</th>
        <th class="table-head">Video Back end</th>
        <th class="table-head">Edit</th>
        <th class="table-head">Delete</th>
      </tr>
    </thead>

    <tbody>
      {{#each videos}}
      <tr class="table-row" id="{{this._id}}">
        {{> videos_row}}
      </tr>
      {{/each}}
      {{#unless videos}}
      <tr>
        <td colspan="6">Sorry no videos yet</td>
      </tr>
      {{/unless}}
    </tbody>
  </table>
</div>